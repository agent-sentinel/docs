{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Agent Sentinel",
  "colors": {
    "primary": "#000000",
    "light": "#FFFFFF",
    "dark": "#000000"
  },
  "fonts": {
    "family": "DM Sans",
    "heading": {
      "family": "Space Grotesk",
      "weight": 600
    },
    "body": {
      "family": "DM Sans",
      "weight": 400
    }
  },
  "favicon": "/favicon.ico",
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "icon": "github",
          "href": "https://github.com/agent-sentinel/"
        },
        {
          "anchor": "PyPI",
          "icon": "python",
          "href": "https://pypi.org/project/agentsentinel-sdk/"
        }
      ]
    },
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart"
            ]
          },
          {
            "group": "Concepts",
            "pages": [
              "concepts/actions-and-runs",
              "concepts/ledger",
              "concepts/policies"
            ]
          },
          {
            "group": "SDK (Python)",
            "pages": [
              "sdk/python/installation",
              "sdk/python/instrumentation",
              "sdk/python/policies",
              "sdk/python/remote-sync",
              "sdk/python/replay",
              "sdk/python/interventions",
              "sdk/python/approvals",
              "sdk/python/mcp",
              "sdk/python/errors",
              "sdk/python/llm-integrations",
              "sdk/python/framework-integrations",
              "sdk/python/compliance"
            ]
          },
          {
            "group": "Platform API",
            "pages": [
              "platform/overview",
              "platform/auth",
              "platform/runs",
              "platform/ledger",
              "platform/agents",
              "platform/interventions",
              "platform/approvals",
              "platform/policies",
              "platform/stats",
              "platform/replay",
              "platform/mcp",
              "platform/websockets",
              "platform/compliance"
            ]
          },
          {
            "group": "Web Console",
            "pages": [
              "console/overview",
              "console/quickstart",
              "console/interventions",
              "console/approvals",
              "console/runs",
              "console/ledger",
              "console/agents",
              "console/analytics",
              "console/settings"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "hidden": true,
        "groups": [
          {
            "group": "Platform API",
            "pages": [
              "api-reference/introduction"
            ]
          }
        ]
      }
    ]
  },
  "logo": "/logo/full_logo.jpg",
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hello@agentsentinel.dev"
      }
    ],
    "primary": {
      "type": "button",
      "label": "API Reference",
      "href": "/api-reference/introduction"
    }
  },
  "modeToggle": {
    "default": "dark"
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/agent-sentinel/agent-sentinel",
      "website": "https://agentsentinel.dev"
    }
  },
  "appearance": {
    "strict": true
  }
}
